<Project Sdk="Godot.NET.Sdk/4.3.0">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <TargetFramework Condition=" '$(GodotTargetPlatform)' == 'android' ">net7.0</TargetFramework>
    <TargetFramework Condition=" '$(GodotTargetPlatform)' == 'ios' ">net8.0</TargetFramework>
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <RootNamespace>Jogo25D</RootNamespace>
    <DebugType>none</DebugType>
  </PropertyGroup>
  <PropertyGroup>
    <GodotExePath Condition=" '$(GodotExePath)' == '' ">
      E:\Programs\Godot\Godot_v4.6-stable_mono_win64_console.exe
    </GodotExePath>
    <RunCommand>powershell</RunCommand>
    <RunArguments>
      -NoExit -Command "dotnet build '$(MSBuildProjectDirectory)\$(MSBuildProjectFile)' ; Start-Process -FilePath '$(GodotExePath)' -ArgumentList '--path','$(MSBuildProjectDirectory)' -NoNewWindow"
    </RunArguments>
    <RunWorkingDirectory>$(MSBuildProjectDirectory)</RunWorkingDirectory>
  </PropertyGroup>
  <ItemGroup>
    <None Include=".gitignore" />
    <None Include="Assets\Audio\Music\.gitkeep" />
    <None Include="Assets\Audio\SFX\.gitkeep" />
    <None Include="Assets\Fonts\.gitkeep" />
    <None Include="Assets\Sprites\.gitkeep" />
    <None Include="Assets\Textures\.gitkeep" />
    <None Include="Jogo25D.sln" />
    <None Include="project.godot" />
    <None Include="Scenes\Characters\Player.tscn" />
    <None Include="Scenes\Entities\Bullet.tscn" />
    <None Include="Scenes\Entities\Platform.tscn" />
    <None Include="Scenes\Levels\Main.tscn" />
    <None Include="Scenes\UI\PauseMenu.tscn" />
  </ItemGroup>
</Project>